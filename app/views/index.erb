<div class="row">
  <div class="sidebar">
    <header>
      <!-- Search -->
      <div class="search">
        <i class="fa fa-search"></i>
        <input type="text" class="form-control" placeholder="Search...">
      </div>

      <!-- Create Pool -->
      <a href="#" class="create-pool-btn" title="Create pool">
        <i class="fa fa-plus"></i>
      </a>
    </header>

    <!-- Pools & folders list -->
    <div class="list">
      <% @pools.each do |pool| %>
        <!-- Pool -->
        <%= partial(:'sidebar/pool', locals: {pool: pool}) %>

        <!-- List pool's folders -->
        <%= zfs_tree(pool) %>
      <% end %>
    </div>
  </div>

  <div class="main">
    <h2>Pool "tank"</h2>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#">Overview</a></li>
      <li><a href="#">Snapshots</a></li>
      <li><a href="#">Settings</a></li>
    </ul>
  </div> <!-- .main -->

</div> <!-- .row -->