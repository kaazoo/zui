<header>
  <h2>Create a new pool</h2>
</header>

<div class="content">
  <%= render_flash() %>

  <form id="new-pool" class="form-horizontal" role="form" method="post" action="/pools/new">
    <div class="form-group">
      <label for="pool-name" class="col-sm-2 control-label">Pool Name</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="pool-name" name="name">
      </div>
    </div>

    <div class="form-group">
      <label for="pool-vdev-type" class="col-sm-2 control-label">VDev Type</label>
      <div class="col-sm-4">
        <select class="form-control" id="pool-vdev-type" name="type">
          <option value="">Basic</option>
          <option value="mirror">Mirror</option>
          <option value="raidz1">Raidz1</option>
          <option value="raidz2">Raidz2</option>
          <option value="raidz3">Raidz3</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Disks</label>
      <div class="col-sm-10">
        <div class="checkbox">
          <label><input type="checkbox" name="disks[]" value="sda"> sda</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" name="disks[]" value="sdc"> sdc</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" name="disks[]" value="sde"> sde</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <button type="submit" class="btn btn-primary">Create Pool</button>
      </div>
    </div>
  </form>
</div> <!-- .content -->